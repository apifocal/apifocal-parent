<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.apifocal</groupId>
  <artifactId>apifocal-parent</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>apifocal parent</name>
  <description>
    apifocal LLC communities provide governance for a number of
    open source projects in the cloud computing, integration and 
    automation fields. 
  </description>
  <url>https://www.apifocal.org/</url>
  <organization>
    <name>apifocal LLC</name>
    <url>https://www.apifocal.org/</url>
  </organization>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <!--
  <scm />
  -->
  <distributionManagement>
      <repository>
          <id>apifocal-public</id>
          <url>${apifocal.public.test.repo.url}</url>
      </repository>
  </distributionManagement>

  <repositories>
      <repository>
          <id>apifocal-public</id>
          <url>${apifocal.public.test.repo.url}</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
      </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>apifocal-public</id>
      <url>${apifocal.public.test.repo.url}</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <prerequisites>
    <maven>3.0</maven><!-- prerequisite of some plugins -->
  </prerequisites>

  <properties>
    <distMgmtSnapshotsName>apifocal Snapshot Repository</distMgmtSnapshotsName>
    <distMgmtSnapshotsUrl>https://repository.apifocal.org/content/repositories/snapshots</distMgmtSnapshotsUrl>
    <organization.logo>http://www.apifocal.org/images/logo.png</organization.logo>

    <apifocal.public.test.repo.url>http://dev.cheepee.ro/archiva/repository/apifocal-public</apifocal.public.test.repo.url>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <sourceReleaseAssemblyDescriptor>source-release</sourceReleaseAssemblyDescriptor>
    <gpg.useagent>true</gpg.useagent>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
    <apifocal.compile.show.deprecation>true</apifocal.compile.show.deprecation>
    <apifocal.compile.flags>-Xlint:unchecked,deprecation,fallthrough,finally</apifocal.compile.flags>

    <!-- plugin versions -->
    <build-helper-maven-plugin.version>1.9.1</build-helper-maven-plugin.version>
    <lifecycle-mapping.version>1.0.0</lifecycle-mapping.version>
    <maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
    <swagger-codegen-maven-plugin.version>2.1.5</swagger-codegen-maven-plugin.version>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>${maven-compiler-plugin.version}</version>
          <configuration>
            <compilerArgument>${apifocal.compile.flags}</compilerArgument>
            <showDeprecation>${apifocal.compile.show.deprecation}</showDeprecation>
            <showWarnings>true</showWarnings>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>build-helper-maven-plugin</artifactId>
          <version>${build-helper-maven-plugin.version}</version>
        </plugin>

        <plugin>
          <groupId>io.swagger</groupId>
          <artifactId>swagger-codegen-maven-plugin</artifactId>
          <version>${swagger-codegen-maven-plugin.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>apifocal-release</id>
      <build>
	<!-- TBD -->
      </build>
    </profile>
  </profiles>

</project>
